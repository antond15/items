{
  "printWidth": 150,
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "useTabs": true,
        "tabWidth": 4
      }
    },
    {
      "files": ["items.ts"],
      "options": {
        "useTabs": true,
        "tabWidth": 4,
        "quoteProps": "consistent"
      }
    }
  ]
}
